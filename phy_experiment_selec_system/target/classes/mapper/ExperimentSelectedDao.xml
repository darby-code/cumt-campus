<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.doug.ssm.dao.ExperimentSelectedDao">
    <select id="queryExperimentSelectedBy" resultType="com.doug.ssm.entity.ExperimentSelected">
        SELECT serial_id, student_id, experiment_id, score
        FROM experiment_selected_list
        WHERE experiment_id = #{experimentId}
    </select>
    <select id="queryStudentSelectedExperimentsBy" resultType="Integer">
        SELECT experiment_id
        FROM experiment_selected_list
        WHERE student_id = #{studentId}
    </select>
    <select id="queryScore" resultType="Integer">
        SELECT score
        FROM experiment_selected_list
        WHERE student_id = #{studentId} AND experiment_id = #{experimentId}
    </select>
    <update id="updateScore" parameterType="com.doug.ssm.entity.ExperimentSelected">
        UPDATE experiment_selected_list
        SET score = #{score}
        WHERE student_id = #{studentId} AND experiment_id = #{experimentId}
    </update>
    <insert id="insertExperimentSelected" parameterType="com.doug.ssm.entity.ExperimentSelected">
        INSERT experiment_selected_list (student_id, experiment_id, score)
        VALUES
        (#{studentId}, #{experimentId}, #{score})
    </insert>
    <delete id="deleteStudentBy">
        DELETE FROM experiment_selected_list WHERE experiment_id = #{experimentId}
    </delete>
    <delete id="deleteExperimentBy" parameterType="com.doug.ssm.entity.ExperimentSelected">
        DELETE FROM experiment_selected_list WHERE serial_id = #{serialId}
    </delete>
</mapper>