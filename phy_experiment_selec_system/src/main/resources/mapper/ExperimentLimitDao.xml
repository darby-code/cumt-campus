<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.doug.ssm.dao.ExperimentLimitDao">
    <select id="queryExperimentLimitCollegeIdBy" resultType="Integer">
        SELECT college_id FROM experiment_limit_list WHERE experiment_id = #{experimentId}
    </select>
    <update id="updateExperimentLimit" parameterType="com.doug.ssm.entity.ExperimentLimit">
        UPDATE experiment_limit_list
        SET college_id = #{collegeId}
        WHERE experiment_id = #{experimentId}
    </update>
    <insert id="insertCollegeLimit" parameterType="com.doug.ssm.entity.ExperimentLimit">
        INSERT experiment_limit_list (experiment_id, college_id)
        VALUES
        (#{experimentId}, #{collegeId})
    </insert>
    <delete id="deleteCollegeLimit">
        DELETE FROM experiment_limit_list WHERE experiment_id = #{experimentId} AND college_id = #{collegeId}
    </delete>
    <delete id="deleteExperimentLimitBy">
        DELETE FROM experiment_limit_list WHERE experiment_id = #{experimentId}
    </delete>
</mapper>