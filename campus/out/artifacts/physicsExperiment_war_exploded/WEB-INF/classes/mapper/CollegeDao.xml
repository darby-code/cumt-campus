<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.cumt.phyExperiment.dao.CollegeDao">
    <select id="queryCollegeNameById" resultType="String">
        SELECT college_name FROM college WHERE college_id = #{collegeId}
    </select>
    <select id="queryCollegeDescriptionById" resultType="String">
        SELECT description FROM college WHERE college_id = #{collegeId}
    </select>
    <select id="queryAllColleges" resultType="edu.cumt.phyExperiment.entity.College">
        SELECT college_id, college_name, description FROM college
    </select>
</mapper>