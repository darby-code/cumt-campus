<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.cumt.phyExperiment.dao.ExperimentLimitDao">
    <select id="queryExperimentLimitCollegeIdById" resultType="long">
        SELECT college_id FROM experiment_limit WHERE experiment_id = #{experimentId}
    </select>
    <insert id="insertCollegeLimit">
        INSERT experiment_limit
        (experiment_id, college_id)
        VALUES
        (#{experimentId}, #{collegeId})
    </insert>
    <delete id="deleteCollegeLimit">
        DELETE FROM experiment_limit WHERE experiment_id = #{experimentId} AND college_id = #{collegeId}
    </delete>
    <delete id="deleteExperimentLimitById">
        DELETE FROM experiment_limit WHERE experiment_id = #{experimentId}
    </delete>
</mapper>