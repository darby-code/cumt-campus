<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.cumt.phyExperiment.dao.AnnouncementDao">
    <select id="queryAnnouncement" resultType="String">
        SELECT content FROM announcement LIMIT 1
    </select>
    <update id="modifyAnnouncement">
        UPDATE announcement
        SET content = #{content}
    </update>
</mapper>